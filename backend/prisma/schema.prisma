generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  name         String?
  twoFactorSecret String?
  twoFactorEnabled Boolean @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  projects     Project[]
  memberships  Membership[]
  refreshTokens RefreshToken[]
  auditLogs   AuditLog[]
}

model Project {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  owner   User   @relation(fields: [ownerId], references: [id])
  ownerId String

  tasks Task[]
  org   Organization @relation(fields: [orgId], references: [id])
  orgId String

  ganttTasks GanttTask[]
  emissions  ProjectEmission[]
  messages   ProjectMessage[]
  files      ProjectFile[]
}

model Task {
  id          String   @id @default(cuid())
  title       String
  description String?
  status      String   @default("todo")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  project   Project @relation(fields: [projectId], references: [id])
  projectId String
}

// Finance domain
model Customer {
  id        String   @id @default(cuid())
  name      String
  email     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  invoices Invoice[]
}

model Supplier {
  id        String   @id @default(cuid())
  name      String
  email     String?
  phone     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  expenses Expense[]
}

model Expense {
  id        String   @id @default(cuid())
  label     String
  amount    Float
  date      DateTime @default(now())
  project   Project? @relation(fields: [projectId], references: [id])
  projectId String?

  supplier   Supplier? @relation(fields: [supplierId], references: [id])
  supplierId String?
  org   Organization? @relation(fields: [orgId], references: [id])
  orgId String?
}

model Invoice {
  id         String       @id @default(cuid())
  status     String       @default("draft")
  issueDate  DateTime     @default(now())
  dueDate    DateTime?
  project    Project?     @relation(fields: [projectId], references: [id])
  projectId  String?
  customer   Customer     @relation(fields: [customerId], references: [id])
  customerId String
  lines      InvoiceLine[]
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  org   Organization? @relation(fields: [orgId], references: [id])
  orgId String?
  payments  Payment[]
}

model InvoiceLine {
  id          String  @id @default(cuid())
  description String
  quantity    Float   @default(1)
  unitPrice   Float
  taxRate     Float   @default(0) // 0..1 (e.g., 0.2 for 20%)
  invoice     Invoice @relation(fields: [invoiceId], references: [id])
  invoiceId   String
}

// Cashflow
model Payment {
  id        String   @id @default(cuid())
  invoice   Invoice  @relation(fields: [invoiceId], references: [id])
  invoiceId String
  amount    Float
  method    String?  // bank, cash, card, transfer
  reference String?
  date      DateTime @default(now())
  org       Organization? @relation(fields: [orgId], references: [id])
  orgId     String?
}

model Receipt {
  id        String   @id @default(cuid())
  label     String
  amount    Float
  date      DateTime @default(now())
  project   Project? @relation(fields: [projectId], references: [id])
  projectId String?
  org       Organization? @relation(fields: [orgId], references: [id])
  orgId     String?
}

// HR & Assets
model Employee {
  id        String   @id @default(cuid())
  name      String
  email     String?
  role      String?  // worker, manager, etc.
  qrSecret  String?
  org       Organization @relation(fields: [orgId], references: [id])
  orgId     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  attendance Attendance[]
}

model Attendance {
  id         String   @id @default(cuid())
  employee   Employee @relation(fields: [employeeId], references: [id])
  employeeId String
  project    Project? @relation(fields: [projectId], references: [id])
  projectId  String?
  checkIn    DateTime
  checkOut   DateTime?
  method     String   @default("qr") // qr | manual | vision
  photoUrl   String?
  createdAt  DateTime @default(now())
}

model Equipment {
  id        String   @id @default(cuid())
  name      String
  serial    String?  @unique
  status    String   @default("available") // available | in_use | maintenance
  org       Organization @relation(fields: [orgId], references: [id])
  orgId     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  logs EquipmentLog[]
}

model EquipmentLog {
  id          String     @id @default(cuid())
  equipment   Equipment  @relation(fields: [equipmentId], references: [id])
  equipmentId String
  project     Project?   @relation(fields: [projectId], references: [id])
  projectId   String?
  type        String     // assign | return | maintenance
  at          DateTime   @default(now())
  note        String?
}

// Gantt
model GanttTask {
  id        String   @id @default(cuid())
  project   Project  @relation(fields: [projectId], references: [id])
  projectId String
  name      String
  category  String?  // indoor/outdoor/etc.
  start     DateTime?
  end       DateTime?
  durationDays Int?  // if set, derive end from start
  status    String   @default("planned")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  dependencies GanttDependency[]
}

model GanttDependency {
  id        String    @id @default(cuid())
  task      GanttTask @relation(fields: [taskId], references: [id])
  taskId    String
  dependsOn GanttTask @relation("DependsOn", fields: [dependsOnId], references: [id])
  dependsOnId String
}

// Multi-tenant models
model Organization {
  id        String       @id @default(cuid())
  name      String
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  members   Membership[]
  projects  Project[]
  invoices  Invoice[]
  expenses  Expense[]
  auditLogs AuditLog[]
  listings  Listing[]
  financeApplications FinanceApplication[]
  insuranceApplications InsuranceApplication[]
  subscriptions Subscription[]
  chatSessions ChatSession[]
  pushSubscriptions PushSubscription[]
}

model Membership {
  id        String   @id @default(cuid())
  role      String   @default("member") // owner, admin, member
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  org       Organization @relation(fields: [orgId], references: [id])
  orgId     String
  createdAt DateTime @default(now())
}

model RefreshToken {
  id          String   @id @default(cuid())
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  org         Organization @relation(fields: [orgId], references: [id])
  orgId       String
  tokenHash   String
  expiresAt   DateTime
  revokedAt   DateTime?
  replacedById String?
  createdAt   DateTime @default(now())
  createdByIp String?
}

// Audit & Security
model AuditLog {
  id        String   @id @default(cuid())
  org       Organization? @relation(fields: [orgId], references: [id])
  orgId     String?
  user      User?     @relation(fields: [userId], references: [id])
  userId    String?
  action    String
  entity    String?
  entityId  String?
  metadata  Json?
  at        DateTime @default(now())
}

model FraudAlert {
  id        String   @id @default(cuid())
  org       Organization @relation(fields: [orgId], references: [id])
  orgId     String
  type      String
  entity    String?
  entityId  String?
  score     Float    @default(0)
  detail    String?
  createdAt DateTime @default(now())
}

// Marketplace
model Listing {
  id        String   @id @default(cuid())
  org       Organization @relation(fields: [orgId], references: [id])
  orgId     String
  title     String
  description String
  category  String?
  location  String?
  tags      String[]
  priceMin  Float?
  priceMax  Float?
  active    Boolean @default(true)
  createdAt DateTime @default(now())
  applications Application[]
  commissions Commission[]
}

model Application {
  id         String   @id @default(cuid())
  listing    Listing  @relation(fields: [listingId], references: [id])
  listingId  String
  bidderOrg  Organization @relation(fields: [bidderOrgId], references: [id])
  bidderOrgId String
  message    String?
  status     String   @default("pending") // pending | accepted | rejected
  createdAt  DateTime @default(now())
}

model Commission {
  id          String  @id @default(cuid())
  listing     Listing @relation(fields: [listingId], references: [id])
  listingId   String
  application Application? @relation(fields: [applicationId], references: [id])
  applicationId String?
  rate        Float   @default(0.05)
  amount      Float?
  status      String  @default("unpaid")
  createdAt   DateTime @default(now())
}

// Financing & Insurance
model FinanceApplication {
  id        String   @id @default(cuid())
  org       Organization @relation(fields: [orgId], references: [id])
  orgId     String
  project   Project? @relation(fields: [projectId], references: [id])
  projectId String?
  amountRequested Float
  purpose   String?
  risk      Float   @default(0)
  score     Int     @default(0)
  status    String  @default("draft") // draft | submitted | approved | rejected
  createdAt DateTime @default(now())
}

model InsuranceApplication {
  id        String   @id @default(cuid())
  org       Organization @relation(fields: [orgId], references: [id])
  orgId     String
  project   Project? @relation(fields: [projectId], references: [id])
  projectId String?
  coverage  String?
  sumInsured Float?
  risk      Float   @default(0)
  status    String  @default("draft")
  createdAt DateTime @default(now())
}

// Subscriptions
model SubscriptionPlan {
  id        String   @id @default(cuid())
  name      String
  price     Float
  interval  String @default("month") // month | year
  features  Json?
  createdAt DateTime @default(now())
}

model Subscription {
  id        String   @id @default(cuid())
  org       Organization @relation(fields: [orgId], references: [id])
  orgId     String
  plan      SubscriptionPlan @relation(fields: [planId], references: [id])
  planId    String
  status    String  @default("active")
  currentPeriodEnd DateTime?
  createdAt DateTime @default(now())
}

// ESG
model EmissionFactor {
  id        String   @id @default(cuid())
  name      String
  unit      String   // e.g., kg, L, kWh, m3
  factorKgCO2ePerUnit Float
  category  String?
}

model ProjectEmission {
  id        String   @id @default(cuid())
  project   Project  @relation(fields: [projectId], references: [id])
  projectId String
  factor    EmissionFactor @relation(fields: [factorId], references: [id])
  factorId  String
  quantity  Float
  date      DateTime @default(now())
}

// Tenders & Alerts
model Tender {
  id        String   @id @default(cuid())
  org       Organization? @relation(fields: [orgId], references: [id])
  orgId     String?
  title     String?
  source    String?
  text      String
  createdAt DateTime @default(now())
  signatures TenderSignature[]
}

model TenderSignature {
  id        String  @id @default(cuid())
  tender    Tender  @relation(fields: [tenderId], references: [id])
  tenderId  String
  signature String
  n         Int     @default(3) // n-gram size
}

model TenderAlert {
  id        String   @id @default(cuid())
  org       Organization? @relation(fields: [orgId], references: [id])
  orgId     String?
  tender    Tender   @relation("TenderA", fields: [tenderId], references: [id])
  tenderId  String
  similarTo Tender   @relation("TenderB", fields: [similarToTenderId], references: [id])
  similarToTenderId String
  score     Float
  createdAt DateTime @default(now())
}

// BIM / Quantities
model BimModel {
  id        String   @id @default(cuid())
  project   Project  @relation(fields: [projectId], references: [id])
  projectId String
  name      String
  version   String?
  createdAt DateTime @default(now())
  measurements BimMeasurement[]
}

model BimMeasurement {
  id        String   @id @default(cuid())
  model     BimModel @relation(fields: [modelId], references: [id])
  modelId   String
  elementId String
  type      String? // wall/slab/door etc.
  surface   Float?
  volume    Float?
  quantity  Float?
}

// Push subscriptions (PWA)
model PushSubscription {
  id        String   @id @default(cuid())
  org       Organization @relation(fields: [orgId], references: [id])
  orgId     String
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
  endpoint  String   @unique
  p256dh    String
  auth      String
  createdAt DateTime @default(now())
}

// Maintenance
model Ticket {
  id          String   @id @default(cuid())
  org         Organization @relation(fields: [orgId], references: [id])
  orgId       String
  project     Project? @relation(fields: [projectId], references: [id])
  projectId   String?
  title       String
  description String?
  status      String   @default("open")
  priority    String   @default("normal")
  createdBy   User?    @relation(fields: [createdById], references: [id])
  createdById String?
  createdAt   DateTime @default(now())
  closedAt    DateTime?
}

model Warranty {
  id        String   @id @default(cuid())
  org       Organization @relation(fields: [orgId], references: [id])
  orgId     String
  project   Project? @relation(fields: [projectId], references: [id])
  projectId String?
  vendor    String?
  startDate DateTime
  endDate   DateTime
  terms     String?
}

model SatisfactionSurvey {
  id        String   @id @default(cuid())
  org       Organization @relation(fields: [orgId], references: [id])
  orgId     String
  project   Project? @relation(fields: [projectId], references: [id])
  projectId String?
  rating    Int
  comment   String?
  createdAt DateTime @default(now())
}

model ProjectMessage {
  id        String   @id @default(cuid())
  project   Project  @relation(fields: [projectId], references: [id])
  projectId String
  author    User?    @relation(fields: [authorId], references: [id])
  authorId  String?
  content   String
  createdAt DateTime @default(now())
}

model ProjectFile {
  id         String   @id @default(cuid())
  project    Project  @relation(fields: [projectId], references: [id])
  projectId  String
  name       String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  currentVersion FileVersion? @relation(fields: [currentVersionId], references: [id])
  currentVersionId String?
  versions   FileVersion[]
}

model FileVersion {
  id         String   @id @default(cuid())
  file       ProjectFile @relation(fields: [fileId], references: [id])
  fileId     String
  version    Int
  hash       String
  size       Int
  mimeType   String?
  storagePath String
  uploadedBy User?    @relation(fields: [uploadedById], references: [id])
  uploadedById String?
  note       String?
  uploadedAt DateTime @default(now())
}

// Market data
model MarketPrice {
  id          String   @id @default(cuid())
  category    String?
  item        String
  unit        String?
  price       Float
  currency    String   @default("EUR")
  region      String?
  source      String?
  effectiveDate DateTime?
  createdAt   DateTime @default(now())
}

// Collaborative Chat
model ChatSession {
  id          String   @id @default(cuid())
  org         Organization @relation(fields: [orgId], references: [id])
  orgId       String
  name        String
  createdBy   User?    @relation(fields: [createdById], references: [id])
  createdById String?
  createdAt   DateTime @default(now())
  messages    ChatMessage[]
  members     ChatMember[]
}

model ChatMember {
  id         String      @id @default(cuid())
  session    ChatSession @relation(fields: [sessionId], references: [id])
  sessionId  String
  user       User        @relation(fields: [userId], references: [id])
  userId     String
  role       String      @default("member") // member | admin
}

model ChatMessage {
  id         String      @id @default(cuid())
  session    ChatSession @relation(fields: [sessionId], references: [id])
  sessionId  String
  user       User?       @relation(fields: [userId], references: [id])
  userId     String?
  role       String      // user | assistant | system
  content    String
  lang       String?
  createdAt  DateTime @default(now())
}
